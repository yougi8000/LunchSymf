{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!
{% endblock %}

{% block body %}
	<div class="container">
		<section class="articles">


			<h2>{{ article.title }}</h2>
			<div class="metadata">Ecrit le
				{{ article.createdAt | date('d/m/Y') }}
				à
				{{ article.createdAt | date('H:i') }}
				dans la catégorie
				{{ article.category.title }}</div>
			<img src="{{ article.image }}" alt="Photo de l'article">
			{{ article.content | raw }}
			<button data-like="{{ article.id }}" class="btn btn-primary btn-like show">Liker</button>
			<button data-dislike="{{ article.id }}" class="btn btn-danger btn-dislike">Disliker</button>


		</section>
		<section id="commentaires">
			{% for comment in article.comments %}
				<div class="comment">
					<div class="row">
						<div class="col-3">
							{{ comment.author }}
							(<small>{{ comment.createdAt | date('d/m/Y à H:i')}}</small>)
						</div>
						<div class="col">
							{{comment.content | raw}}
						</div>
					</div>
				</div>
			{% endfor %}
		</section>
	</div>
{% endblock %}
